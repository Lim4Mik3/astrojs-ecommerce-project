---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<p class="flex divider text-2xl text-zinc-800">{title}</p>


<style>
  .divider::after {
    content: ' ';
    width: 160px;
    height: 2px;
    margin-left: 20px;
    background-color: #D9D9D9;
    align-self: center;
  }

  .divider::before {
    content: ' ';
    width: 160px;
    height: 2px;
    margin-right: 20px;
    background-color: #D9D9D9;
    align-self: center;
  }
</style>