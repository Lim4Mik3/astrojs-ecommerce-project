---
import GlobalStyle from "src/styles/GlobalStyle.astro";

interface Props {
  title?: string;
}

const title = Astro.props.title;
---

<html lang="pt-BR">
  <head>
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">

    <title>{title}</title>
  </head>
  <body>
    <main id="main-wrapper">
      <slot />
    </main>
  </body>
</html>

<GlobalStyle />